<% if current_user %>
  <h1>Welcome, <%= current_user.username %></h1>
  <table>
    <thead>
      <tr>
        <th>username</th>
        <th>email</th>
        <th>created at</th>
        <th>updated at</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= current_user.username %></td>
        <td><%= current_user.email %></td>
        <td><%= current_user.created_at.strftime("%d.%m.%Y") %></td>
        <td><%= current_user.updated_at.strftime("%d.%m.%Y") %></td>
      </tr>
    </tbody>
  </table>
  <%= link_to "Edit Profile", edit_user_profile_path(current_user) %><br>
  <% if current_user.admin? %>
    <%= link_to "Manage Users", users_path %><br>
  <% end %>
  <%= link_to 'Log out', user_session_path(current_user), data: { turbo_method: :delete } %><br>
  <!-- <%= link_to 'Secret page', '/pages/secret' %> -->
<% else %>
  <h1>This is the index page</h1>
  <%= link_to 'Login', new_user_session_path %><br>
  <%= link_to 'Register', new_user_path %><br>
<% end %>
