<h1>Edit User</h1>
<%= form_with(model: @user, url: user_path(@user), method: :patch) do |f| %>
  <% if @user.errors.any? %>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div>
  <div> 
    <%= f.radio_button :role, :admin %>
    <%= f.label :admin %><br> 
    <%= f.radio_button :role, :user %>
    <%= f.label :user %><br>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div>
  <p>
    <%= f.submit %>
  </p>
  <p>
    <%= link_to 'Back', users_path %>
  </p>
<% end %>
